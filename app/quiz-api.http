
###

# Add question (single choice)
# Replace :quizId with your quiz id (e.g. d81a7b9b-44b1-4c69-8e86-b2299284e17c)
POST http://localhost:8080/api/quizzes/8f82e95d-48e0-43dd-af6d-4fac593f9cdb/questions
Content-Type: application/json

{
  "text": "What does JS stand for?",
  "type": "single",
  "options": [
    { "id": "a", "text": "Java Source" },
    { "id": "b", "text": "JavaScript" },
    { "id": "c", "text": "Just Script" }
  ],
  "correctOptionIds": ["b"]
}

###

# Fetch questions
GET http://localhost:8080/api/quizzes/8f82e95d-48e0-43dd-af6d-4fac593f9cdb/questions


###

# Submit answers (this is the important one)
# Replace :quizId and :questionId from earlier. Note the exact field names: selectedOptionIds
POST http://localhost:8080/api/quizzes/8f82e95d-48e0-43dd-af6d-4fac593f9cdb/submit
Content-Type: application/json

{
  "answers": [
    {
      "questionId": "0193204f-6fca-4a96-a4e4-39b30e293c75",
      "selectedOptionIds": ["b"]
    }
  ]
}

